{{template "admin" .}}

{{ define "css"}}
<link
  href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css"
  rel="stylesheet"
  type="text/css"
/>

{{ end }}

{{define "page-title"}}
All New Reservations
{{ end }}

{{define "content"}}
<div class="col-md-12">
  {{ $res := index .Data "reservations" }}
  <table class="table table-striped table-hover" id="all-new-reservations">
    <thead>
      <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Room</th>
        <th>Arrival</th>
        <th>Departure</th>
        <th>Processed</th>
        <th>Edit</th>
      </tr>
    </thead>
    <tbody>
      {{ range $res }}
      <tr>
        <td>{{.ID}}</td>
        <td>{{.FirstName}}</td>
        <td>{{.LastName}}</td>
        <td>{{.Room.RoomName}}</td>
        <td>{{ humanDate .StartDate }}</td>
        <td>{{ humanDate .EndDate }}</td>
        <td>{{.Processed}}</td>
        <td><a href="/admin/reservations/new/{{.ID}}">Edit</a></td>
      </tr>
      {{
        end
      }}
    </tbody>
  </table>
</div>
{{ end }}

{{ define "js"}}
<script
  src="https://cdn.jsdelivr.net/npm/simple-datatables@latest"
  type="text/javascript"
></script>

<script>
    // Don't run DataTable until Dom Content is completely loaded
    document.addEventListener("DOMContentLoaded", function () {
        const dataTable = new simpleDatatables.DataTable('#all-new-reservations', {
            select: 3, //4th column on the table
            sort: "desc",
        })
    })
</script>
{{ end }}
